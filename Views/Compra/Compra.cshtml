
@{
    ViewBag.Title = "Compra";
}

<div class="col-md-12">
    <div class="row justify-content-center py-3">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card text-center">
                <div class="card-header">
                    Proceso de Compra
                </div>
                <div class="card-body justify-content-center">
                    <p class="card-text">Total a pagar</p>
                    <h5 class="card-title">$9990</h5>
                    <!--Aqui van los productos del carito de compra-->
                    <div class="card mb-3 container-fluid" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <svg class="img-fluid rounded-start" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                                    <rect width="100%" height="100%" fill="#55595c" />
                                    <text x="5%" y="50%" fill="#eceeef">Imagen del producto</text>
                                </svg>
                                <!--<img src="..." class="img-fluid rounded-start" alt="...">-->
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Nombre del producto</h5>
                                    <p class="card-text">Descripcion del producto</p>
                                    <p class="card-text"><small class="text-body-secondary">$9990</small></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a class="nav-item">@Html.ActionLink("Pagar", "Pago", "Compra", null, new { @class = "btn btn-danger me-2" })</a>
                </div>
                <div class="card-footer text-body-secondary">

                </div>
            </div>

        </div>

        <div class="col-3"></div>
    </div>

</div>

