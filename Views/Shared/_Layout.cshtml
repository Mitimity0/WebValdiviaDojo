@{
    var usuario = HttpContext.Current.Session["Usuario"] as dynamic;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valdivia Dojo - @ViewBag.Title</title>

    <!-- Estilos CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--  Fontawesome (Logos)  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body style="display: flex; flex-direction: column; min-height: 100vh;">
    <!-- Encabezado -->
    <head class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <!--  <nav class="navbar navbar-expand-lg navbar-dark bg-danger bg-gradient">  -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger bg-dark">
            <div class="container container-fluid">
                <!--  Titulo  -->
                <a>@Html.ActionLink("Valdivia Dojo ", "Index", "Home", null, new { @class = "navbar-brand navbar-nav me-auto" })</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#NavPrincipalSup"
                        aria-controls="NavPrincipalSup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="NavPrincipalSup">
                    <!-- Enlaces de navegación -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="padding-left:80px">
                        <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = (ViewBag.Title == "" ? "nav-link active" : "nav-link") })</li>
                        <li class="nav-item">@Html.ActionLink("Tienda", "Tienda", "Home", null, new { @class = (ViewBag.Title == "Tienda" ? "nav-link active" : "nav-link") })</li>
                        <li class="nav-item">@Html.ActionLink("Inscríbete aquí", "ClasesDisponibles", "Inscripcion", null, new { @class = (ViewBag.Title == "Contacto" ? "nav-link active" : "nav-link") })</li>
                        @if (usuario != null && (usuario.id_tipo_usu == "1" || usuario.id_tipo_usu == "2"))
                        {
                            <li class="nav-item nav-link btn" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop">
                                Menu Administrador
                            </li>
                        }

                    </ul>
                    <!--  Sesion  -->
                    @if (usuario != null)
                    {
                        <div class="flex-shrink-0 dropdown">

                            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/Img/Usuario/default.png" alt="mdo" width="32" height="32" class="rounded-circle">
                                <span class="navbar-text">¡Hola, @usuario.PNombre!</span>
                            </a>

                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                                <li><a class="dropdown-item" href="#">New project...</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li>@Html.ActionLink("Perfil", "PerfilUsu", "Sesion", null, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Sesion", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="text-end">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li>@Html.ActionLink("Iniciar Sesión", "Login", "Sesion", null, new { @class = "btn btn-outline-light me-2" })</li>
                                <li>@Html.ActionLink("Crear Usuario", "NuevoUsuario", "Sesion", null, new { @class = "btn btn-outline-light me-2" })</li>
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </nav>
    </head>

    <main style="flex-grow:1;">
        @RenderBody()
        @if (ViewBag.Mensaje != null)
        {
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Aviso</h5>
                        </div>
                        <div class="modal-body">
                            @ViewBag.Mensaje
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                // Agrega este script para activar el modal automáticamente
                window.onload = function () {
                    var myModal = new bootstrap.Modal(document.getElementById('exampleModal'));
                    myModal.show();
                };
            </script>
        }

    </main>

    <footer class="bg-dark text-muted py-5 bg-ligt">
        <div class="container">
            <ul class="float-end navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = (ViewBag.Title == "Calificacion" ? "nav-link active" : "nav-link") })</li>
            </ul>
            <p>&copy; @DateTime.Now.Year - Valdivia Dojo</p>
        </div>
    </footer>

    <!--  Menu administrador  -->
    <div class="offcanvas offcanvas-start bg-danger" tabindex="-1" id="offcanvasWithBackdrop" aria-labelledby="offcanvasWithBackdropLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-light display-10 text-center" id="offcanvasWithBackdropLabel">Menu Administrador</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <div class="btn-group-vertical d-grid gap-2">
                <a class="nav-item">@Html.ActionLink("Usuario", "Usuario", "Usuario", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Tipo Usuario", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Tipo Evento", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Credencial", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Producto", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Horario", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Clase", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Cinturon", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
                <a class="nav-item">@Html.ActionLink("Encuesta", "Index", "Home", null, new { @class = "btn btn-outline-light me-2" })</a>
            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Scripts de Fontawesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" integrity="sha512-uKQ39gEGiyUJl4AI6L+ekBdGKpGw4xJ55+xyJG7YFlJokPNYegn9KwQ3P8A7aFQAUtUsAQHep+d/lrGqrbPIDQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>