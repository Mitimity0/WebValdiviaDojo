
@{
    ViewBag.Title = "TipoUsuario";
}


<div class="py-5 col-md-12">
    <div class="row py-5 justify-content-center">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="text-center py-4">
                <h4 class="display-8">Agregar Tipo de Usuario</h4>
            </div>
            <div class="container row justify-content-center">
                <button class="btn btn-primary col-3" type="button" data-bs-toggle="collapse" data-bs-target="#Agregar" aria-expanded="false" aria-controls="collapseExample">Agregar</button>
                <button class="btn btn-primary col-3" type="button" data-bs-toggle="collapse" data-bs-target="#Eliminar" aria-expanded="false" aria-controls="collapseExample">Eliminar</button>
                <button class="btn btn-primary col-3" type="button" data-bs-toggle="collapse" data-bs-target="#Modificar" aria-expanded="false" aria-controls="collapseExample">Modificar</button>
            </div>

            <!--  AGREGAR  -->
            <div class="collapse" id="Agregar">
                <div class="card card-body">
                    <form class="row g-4 align-items-center" method="post">
                        <!--Id tipo usuario-->
                        <div class="col-2">
                            <label for="idtipo" class="col-form-label">Id tipo usuario</label>
                        </div>
                        <div class="col-4">
                            <input type="number" id="idtipo" class="form-control" aria-describedby="" placeholder="1">
                        </div>
                        <!--Nombre Tipo Usuario-->
                        <div class="col-3">
                            <label for="nomtipo" class="col-form-label">Nombre del tipo usuario</label>
                        </div>
                        <div class="col-3">
                            <input type="text" id="nomtipo" class="form-control" aria-describedby="" placeholder="">
                        </div>
                        <div class="justify-content-center">
                            <button class="btn btn-danger mb-4" type="submit">Agregar</button>
                            <button class="btn btn-danger mb-4" type="">Modificar</button>
                            <button class="btn btn-danger mb-4" type="">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>

            <!--  ELIMINAR  -->
            <div class="collapse" id="Eliminar">
                <div class="card card-body">
                    <div class="d-flex mb-4">
                        <input class="form-control me-2" type="search" placeholder="Buscar Tipo de usuario" aria-label="Search">
                        <button class="btn btn-outline-danger" type="submit">Buscar</button>
                    </div>
                </div>
            </div>

            <!--  MODIFICAR  -->
            <div class="collapse" id="Modificar">
                <div class="card card-body">
                    <div class="d-flex mb-4">
                        <input class="form-control me-2" type="search" placeholder="Buscar Tipo de usuario" aria-label="Search">
                        <button class="btn btn-outline-danger" type="submit">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>






