@{
    ViewBag.Title = "Perfil";
    var usuario = HttpContext.Current.Session["Usuario"] as dynamic;
}


@if (usuario != null)
{
    <div class="py-5 col-12">
        <div class="row justify-content-center">
            <form class="card col-8" method="post" enctype="multipart/form-data">
                <!--  Titulo  -->
                <div class="text-center py-4">
                    <h4 class="display-6">Mi perfil</h4>
                </div>
                <div class="container">
                    <img src="@Url.Content(usuario.rutaIma)" class="img-fluid justify-content-between align-self-center mx-auto d-block " width="500" height="500" />

                    <input type="file" class=" py-5 align-self-center mx-auto d-block" name="imagen" value="" />
                </div>
                <!--  RUT  -->
                <div class="row g-2">
                    <div class="col-10">
                        <div class="form-floating mb-4" style="display: none;">
                            <input type="number" class="form-control" name="rut"pattern="[0-9]{1,}" title="Ingrese solo números" value="@usuario.rut" required>
                            <label for="rut">RUT</label>
                        </div>
                    </div>
                    <div class="col-2" style="display: none;">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="dv" pattern="[0-9Kk]{1}" title="Ingrese solo números o 'K'" value="@usuario.DV" required>
                            <label for="dv">DV</label>
                        </div>
                    </div>
                </div>

                <!--  NOMBRES  -->
                <div class="row g-2">
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="pnombre" value="@usuario.PNombre"pattern="[a-zA-ZáéíóúüÁÉÍÓÚÜ]{2,}" title="Ingrese al menos 2 letras en español" required>
                            <label for="pnombre">Primer nombre</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="snombre" value="@usuario.SNombre"pattern="[a-zA-ZáéíóúüÁÉÍÓÚÜ]{2,}" title="Ingrese al menos 2 letras en español" required>
                            <label for="snombre">Segundo nombre</label>
                        </div>
                    </div>
                </div>
                <!--  Apellidos  -->
                <div class="row g-2">
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="apater" value="@usuario.APaterno"pattern="[a-zA-ZáéíóúüÁÉÍÓÚÜ]{2,}" title="Ingrese al menos 2 letras en español" required>
                            <label for="appaterno">Apellido paterno</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="amater" value="@usuario.AMaterno"pattern="[a-zA-ZáéíóúüÁÉÍÓÚÜ]{2,}" title="Ingrese al menos 2 letras en español" required>
                            <label for="apmaterno">Apellido materno</label>
                        </div>
                    </div>
                </div>
                <!--  Celulares  -->
                <div class="row g-2">
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" name="celular" value="@usuario.celular" min="0" maxlength="10"  required>
                            <label for="celular">Celular</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" name="celularemer" value="@usuario.celularEmer" min="0" maxlength="10"  required>
                            <label for="celularemer">Celular Emergencia</label>
                        </div>
                    </div>
                </div>
                <!--  Fecha Nacimiento-genero  -->
                <div class="row g-2">
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="datetime-local" class="form-control" name="fechanac" value="@usuario.FNacimiento" min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                               max="@DateTime.Now.AddYears(-3).ToString("yyyy-MM-dd")"required>
                            <label for="fechanac">Fecha de nacimiento</label>
                        </div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>

                <!--  Direccion  -->
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" name="dire" value="@usuario.direccion"pattern="[a-zA-ZáéíóúüÁÉÍÓÚÜ]{2,}" title="Ingrese al menos 2 letras en español" required>
                    <label for="direccion">Direccion</label>
                </div>
                <!--  Fisico  -->
                <div class="row g-2">
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="peso"  min="0" maxlength="3"  value="@usuario.peso">
                            <label for="peso">Peso</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" name="altura"  min="0" maxlength="3"  value="@usuario.altura">
                            <label for="altura">Altura</label>
                        </div>
                    </div>
                </div>
                <!--    -->
                <div class="row g-2" style="display: none;">
                    <div class="col-4">
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" name="p_gen" value="@usuario.id_genero" required>
                            <label for="p_gen">Género</label>
                        </div>

                    </div>
                    <div class="col-4" style="display: none;">
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" name="p_t_usu" value="@usuario.id_tipo_usu" required>
                            <label for="p_t_usu">Tipo usuario</label>
                        </div>
                    </div>
                    <div class="col-4" style="display: none;">
                        <div class="form-floating mb-4">
                            <input type="number" class="form-control" name="p_cin" value="@usuario.id_cinturon" required>
                            <label for="p_cin">ID cinturon</label>
                        </div>
                    </div>
                </div>

                <!--  Enviar informacion  -->
                <div class="py-3"></div>
                <button class="btn btn-danger mb-4" type="submit">Actualizar cuenta</button>
            </form>
        </div>
    </div>

}



