
@{
    ViewBag.Title = "Nuevo Cinturon";
}

<div class="py-5 col-12">
    <div class="row justify-content-center">
        <form class="card col-8" method="post" enctype="multipart/form-data">
            <!--  Titulo  -->
            <div class="text-center py-4">
                <h4 class="display-6">Agregar Cinturon</h4>
            </div>

            <!--  NOMBRE DEL Cinturon -->
            <div class="row g-2">
                <div class="col-6">
                    <div class="form-floating mb-4">
                        <input type="text" class="form-control" name="p_nombre" value="" required>
                        <label for="p_nombre">Nombre del cinturon</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-4">
                        <input type="text" class="form-control" name="p_color" value="" required>
                        <label for="p_color">Color del cinturon</label>
                    </div>
                </div>
            </div>
            <!--  Enviar informacion  -->
            <div class="py-3"></div>
            <button class="btn btn-danger mb-4" type="submit">Agregar Cinturon</button>
        </form>
    </div>
</div>

