
@{
    ViewBag.Title = "Adm Evento";
}

<div class="py-5 col-md-12">
    <div class="row py-5 justify-content-center">
        <div class="col-8">
            <div class="text-center py-4">
                <h4 class="display-6">Administrar Eventos</h4>
            </div>
            @if (ViewBag.Evento != null)
            {
                <div class="card card-body table-responsive">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Direccion</th>
                                <th scope="col">Fecha Hora</th>
                                <th scope="col">Tipo de evento</th>
                                <th scope="col">Modificar</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.Evento)
                            {
                            <tr>
                                <td>@x.NOMBRE_EVENTO</td>
                                <td>@x.DESCRIPCION_EVENTO</td>
                                <td>@x.DIRECCION</td>
                                <td>@x.FECHA_HORA</td>
                                @foreach (var te in ViewBag.TipoEvento)
                                {
                                    if (x.ID_TIPO_EVENTO == te.ID_TIPO_EVENTO)
                                    {
                                        <td>@te.DES_EVENTO</td>
                                    }
                                } 

                                <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Modificar</button></td>
                                <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Eliminar">Eliminar</button></td>
                            </tr>

                            }
                        </tbody>
                    </table>


                </div>
            }
            else
            {
                <p>No hay eventos registrados registrados</p>
            }
        </div>
    </div>
</div>

